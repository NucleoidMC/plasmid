{
  "schemaVersion": 1,
  "id": "plasmid",
  "version": "${version}",
  "name": "Plasmid",
  "description": "Server-side minigames library based on Fabric",
  "authors": ["Nucleoid Contributors"],
  "license": "LGPLv3",
  "environment": "*",
  "entrypoints": {
    "main": ["xyz.nucleoid.plasmid.Plasmid"]
  },
  "mixins": [
    "plasmid.mixins.json",
    {
      "config": "plasmid.client.mixins.json",
      "environment": "client"
    }
  ],
  "accessWidener": "plasmid.accesswidener",
  "custom": {
    "modmenu": {
      "badges": ["library"]
    }
  },
  "depends": {
    "fabricloader": ">=0.14",
    "fabric": "*",
    "minecraft": ">=1.21.2-",
    "polymer-core": "*",
    "fabric-permissions-api-v0": "*",
    "java": ">=21"
  }
}
